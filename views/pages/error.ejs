<% layout('layouts/boilerplate') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="py-5">
                <% if (error && error.status === 404) { %>
                    <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                    <h1 class="mt-3">Page Not Found</h1>
                    <p class="text-muted">The page you're looking for doesn't exist.</p>
                <% } else { %>
                    <i class="bi bi-x-circle display-1 text-danger"></i>
                    <h1 class="mt-3">Something went wrong</h1>
                    <p class="text-muted">
                        <% if (error && error.message) { %>
                            <%= error.message %>
                        <% } else { %>
                            An unexpected error occurred. Please try again later.
                        <% } %>
                    </p>
                <% } %>
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">Go Home</a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">Go Back</button>
                </div>
                
                <% if (process.env.NODE_ENV === 'development' && error && error.stack) { %>
                    <div class="mt-4 text-start">
                        <details>
                            <summary class="btn btn-sm btn-outline-info">Show Error Details</summary>
                            <pre class="mt-2 p-3 bg-light border rounded"><%= error.stack %></pre>
                        </details>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
