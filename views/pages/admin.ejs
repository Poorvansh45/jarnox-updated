<% layout('layouts/boilerplate') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar">
      <div class="sidebar-header">
        <h5><i class="fas fa-cog"></i> Admin Panel</h5>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link active" href="/admin">
            <i class="fas fa-tachometer-alt"></i> Dashboard
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/companies/add">
            <i class="fas fa-plus"></i> Add Company
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
          </a>
        </li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="col-md-9 col-lg-10 main-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Admin Dashboard</h2>
        <a href="/admin/companies/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Add Company
        </a>
      </div>

      <!-- Success/Error Messages -->
      <% if (typeof success !== 'undefined') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <!-- Stats Cards -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card stats-card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="stats-icon bg-primary">
                  <i class="fas fa-building"></i>
                </div>
                <div class="ms-3">
                  <h5 class="mb-0"><%= totalCompanies %></h5>
                  <small class="text-muted">Total Companies</small>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stats-card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="stats-icon bg-success">
                  <i class="fas fa-chart-line"></i>
                </div>
                <div class="ms-3">
                  <h5 class="mb-0">₹<%= marketSummary ? marketSummary.totalMarketCap.toFixed(2) : '0.00' %>T</h5>
                  <small class="text-muted">Market Cap</small>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stats-card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="stats-icon bg-info">
                  <i class="fas fa-exchange-alt"></i>
                </div>
                <div class="ms-3">
                  <h5 class="mb-0">₹<%= marketSummary ? marketSummary.totalVolume.toFixed(2) : '0.00' %>B</h5>
                  <small class="text-muted">Volume</small>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stats-card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="stats-icon bg-warning">
                  <i class="fas fa-percentage"></i>
                </div>
                <div class="ms-3">
                  <h5 class="mb-0"><%= marketSummary ? marketSummary.avgChange.toFixed(2) : '0.00' %>%</h5>
                  <small class="text-muted">Avg Change</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Companies Table -->
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Companies Management</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Symbol</th>
                  <th>Company Name</th>
                  <th>Sector</th>
                  <th>Market Cap</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% companies.forEach(company => { %>
                <tr>
                  <td><strong><%= company.symbol %></strong></td>
                  <td><%= company.name %></td>
                  <td><span class="badge bg-secondary"><%= company.sector %></span></td>
                  <td>₹<%= company.market_cap ? company.market_cap.toFixed(2) : '0.00' %>B</td>
                  <td>
                    <a href="/admin/companies/<%= company.id %>/edit" class="btn btn-sm btn-outline-primary">
                      <i class="fas fa-edit"></i> Edit
                    </a>
                    <form method="POST" action="/admin/companies/<%= company.id %>/delete" class="d-inline" 
                          onsubmit="return confirm('Are you sure you want to delete this company?')">
                      <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
